<div class="container py-5">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col">
            <h1 class="text-center mb-3">Blog Posts</h1>
            <p class="text-center text-muted">Discover amazing stories from our community</p>
        </div>
    </div>

    <!-- Posts Grid -->
    <% if (posts && posts.length > 0) { %>
        <div class="row">
            <% posts.forEach(post => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/blog/<%= post._id %>" class="text-decoration-none text-dark">
                                    <%= post.title %>
                                </a>
                            </h5>
                            <p class="card-text text-muted">
                                <%= post.excerpt || post.content.substring(0, 120) + '...' %>
                            </p>
                            
                            <div class="post-meta mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <img src="/images/<%= post.author.avatar || 'default-avatar.png' %>" 
                                         alt="<%= post.author.username %>" 
                                         class="user-avatar me-2">
                                    <small class="text-muted">
                                        <%= post.author.username %>
                                    </small>
                                </div>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    <%= new Date(post.createdAt).toLocaleDateString() %>
                                    <span class="mx-2">â€¢</span>
                                    <i class="fas fa-eye me-1"></i>
                                    <%= post.views %>
                                </small>
                            </div>

                            <% if (post.tags && post.tags.length > 0) { %>
                                <div class="mb-3">
                                    <% post.tags.forEach(tag => { %>
                                        <span class="tag"><%= tag %></span>
                                    <% }) %>
                                </div>
                            <% } %>

                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/blog/<%= post._id %>" class="btn btn-primary btn-sm">Read More</a>
                                <div class="text-muted">
                                    <button class="like-button <%= user && post.likes.includes(user._id) ? 'liked' : '' %>" 
                                            data-post-id="<%= post._id %>">
                                        <i class="fas fa-heart me-1"></i>
                                        <span class="like-count"><%= post.likeCount || 0 %></span>
                                    </button>
                                    <span class="ms-2">
                                        <i class="fas fa-comment me-1"></i>
                                        <%= post.commentCount || 0 %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <nav aria-label="Blog pagination" class="mt-5">
                <ul class="pagination justify-content-center">
                    <% if (hasPrevPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="/blog?page=<%= currentPage - 1 %>">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="/blog?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>

                    <% if (hasNextPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="/blog?page=<%= currentPage + 1 %>">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No posts found</h4>
            <p class="text-muted">Check back later for new content!</p>
            <% if (user) { %>
                <a href="/blog/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Create the First Post
                </a>
            <% } %>
        </div>
    <% } %>
</div> 