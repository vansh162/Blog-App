<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Post Content -->
            <article class="card shadow-sm">
                <div class="card-body p-4">
                    <header class="mb-4">
                        <h1 class="display-5 mb-3"><%= post.title %></h1>
                        
                        <!-- Author Info -->
                        <div class="d-flex align-items-center mb-3">
                            <img src="/images/<%= post.author.avatar || 'default-avatar.png' %>" 
                                 alt="<%= post.author.username %>" 
                                 class="user-avatar me-3">
                            <div>
                                <h6 class="mb-1"><%= post.author.username %></h6>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    <%= new Date(post.createdAt).toLocaleDateString() %>
                                    <span class="mx-2">â€¢</span>
                                    <i class="fas fa-eye me-1"></i>
                                    <%= post.views %> views
                                </small>
                            </div>
                        </div>

                        <!-- Tags -->
                        <% if (post.tags && post.tags.length > 0) { %>
                            <div class="mb-3">
                                <% post.tags.forEach(tag => { %>
                                    <span class="tag"><%= tag %></span>
                                <% }) %>
                            </div>
                        <% } %>
                    </header>

                    <!-- Post Content -->
                    <div class="post-content mb-4">
                        <div style="line-height: 1.8; font-size: 1.1rem;">
                            <%= post.content.replace(/\n/g, '<br>') %>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center border-top pt-4">
                        <div class="d-flex gap-3">
                            <button class="like-button <%= user && post.likes.includes(user._id) ? 'liked' : '' %>" 
                                    data-post-id="<%= post._id %>">
                                <i class="fas fa-heart me-2"></i>
                                <span class="like-count"><%= post.likeCount || 0 %></span> Likes
                            </button>
                            <span class="text-muted">
                                <i class="fas fa-comment me-2"></i>
                                <%= post.commentCount || 0 %> Comments
                            </span>
                        </div>

                        <% if (user && post.author._id.toString() === user._id.toString()) { %>
                            <div class="btn-group">
                                <a href="/blog/<%= post._id %>/edit" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <button onclick="deletePost('<%= post._id %>')" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash me-1"></i> Delete
                                </button>
                            </div>
                        <% } %>
                    </div>
                </div>
            </article>

            <!-- Comments Section -->
            <div class="comment-section mt-4">
                <h4 class="mb-4">
                    <i class="fas fa-comments me-2"></i>
                    Comments (<%= post.commentCount || 0 %>)
                </h4>

                <!-- Add Comment Form -->
                <% if (user) { %>
                    <div class="card mb-4">
                        <div class="card-body">
                            <form method="POST" action="/blog/<%= post._id %>/comments">
                                <div class="mb-3">
                                    <label for="comment" class="form-label">Add a comment</label>
                                    <textarea class="form-control" id="comment" name="content" rows="3" 
                                              placeholder="Share your thoughts..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Post Comment
                                </button>
                            </form>
                        </div>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Please <a href="/auth/login">login</a> to leave a comment.
                    </div>
                <% } %>

                <!-- Comments List -->
                <% if (post.comments && post.comments.length > 0) { %>
                    <div class="comments-list">
                        <% post.comments.forEach(comment => { %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex">
                                        <img src="/images/<%= comment.user.avatar || 'default-avatar.png' %>" 
                                             alt="<%= comment.user.username %>" 
                                             class="user-avatar me-3">
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="mb-1"><%= comment.user.username %></h6>
                                                <small class="text-muted">
                                                    <%= new Date(comment.createdAt).toLocaleDateString() %>
                                                </small>
                                            </div>
                                            <p class="mb-0"><%= comment.content %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-comment-slash fa-2x text-muted mb-3"></i>
                        <p class="text-muted">No comments yet. Be the first to share your thoughts!</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Author Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        About the Author
                    </h5>
                </div>
                <div class="card-body text-center">
                    <img src="/images/<%= post.author.avatar || 'default-avatar.png' %>" 
                         alt="<%= post.author.username %>" 
                         class="user-avatar mb-3" style="width: 80px; height: 80px;">
                    <h5><%= post.author.username %></h5>
                    <% if (post.author.bio) { %>
                        <p class="text-muted"><%= post.author.bio %></p>
                    <% } %>
                </div>
            </div>

            <!-- Related Posts -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-newspaper me-2"></i>
                        Recent Posts
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">More posts from our community</p>
                    <a href="/blog" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-right me-2"></i>
                        View All Posts
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 