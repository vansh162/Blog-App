<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Create New Post
                    </h3>
                </div>
                <div class="card-body p-4">
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <%= error %>
                        </div>
                    <% } %>

                    <form method="POST" action="/blog">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title *</label>
                            <input type="text" class="form-control form-control-lg" id="title" name="title" 
                                   required maxlength="200" placeholder="Enter your post title">
                            <div class="form-text">Keep it engaging and descriptive (max 200 characters)</div>
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">Content *</label>
                            <textarea class="form-control" id="content" name="content" rows="12" 
                                      required minlength="10" placeholder="Write your blog post content here..."></textarea>
                            <div class="form-text">Minimum 10 characters required</div>
                        </div>

                        <div class="mb-3">
                            <label for="tags" class="form-label">Tags</label>
                            <input type="text" class="form-control" id="tags" name="tags" 
                                   placeholder="technology, programming, web-development">
                            <div class="form-text">Separate tags with commas (optional)</div>
                        </div>

                        <div class="mb-4">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="published">Published</option>
                                <option value="draft">Draft</option>
                            </select>
                            <div class="form-text">Choose whether to publish immediately or save as draft</div>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>
                                Publish Post
                            </button>
                            <a href="/dashboard" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Writing Tips -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Writing Tips
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Write a compelling title that grabs attention
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Start with a strong introduction
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Use clear, concise language
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Add relevant tags to help readers find your post
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-check text-success me-2"></i>
                            End with a call-to-action or conclusion
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Character counter for title
    document.getElementById('title').addEventListener('input', function() {
        const maxLength = 200;
        const currentLength = this.value.length;
        const remaining = maxLength - currentLength;
        
        const formText = this.parentNode.querySelector('.form-text');
        if (remaining < 0) {
            formText.textContent = `Title is too long (${Math.abs(remaining)} characters over limit)`;
            formText.className = 'form-text text-danger';
        } else {
            formText.textContent = `${remaining} characters remaining`;
            formText.className = 'form-text';
        }
    });

    // Character counter for content
    document.getElementById('content').addEventListener('input', function() {
        const minLength = 10;
        const currentLength = this.value.length;
        const remaining = minLength - currentLength;
        
        const formText = this.parentNode.querySelector('.form-text');
        if (remaining > 0) {
            formText.textContent = `${remaining} more characters needed`;
            formText.className = 'form-text text-warning';
        } else {
            formText.textContent = 'Minimum length requirement met';
            formText.className = 'form-text text-success';
        }
    });
</script> 